<?xml version="1.0"?>
<interface>
  <requires lib="gtk+" version="2.16"/>
  <!-- interface-naming-policy project-wide -->
  <object class="GtkStatusIcon" id="tray_icon">
    <property name="has_tooltip">True</property>
    <property name="title">Huson notifier</property>
    <signal name="popup_menu" handler="popup_menu_cb" object="menu"/>
  </object>
  <object class="GtkMenu" id="menu">
    <property name="visible">True</property>
    <child>
      <object class="GtkImageMenuItem" id="settings">
        <property name="label">gtk-preferences</property>
        <property name="visible">True</property>
        <property name="use_underline">True</property>
        <property name="use_stock">True</property>
      </object>
    </child>
    <child>
      <object class="GtkImageMenuItem" id="quit">
        <property name="label">gtk-quit</property>
        <property name="visible">True</property>
        <property name="use_underline">True</property>
        <property name="use_stock">True</property>
      </object>
    </child>
  </object>
  <object class="GtkListStore" id="job_results">
    <columns>
      <!-- column-name job -->
      <column type="gchararray"/>
      <!-- column-name build -->
      <column type="gint"/>
      <!-- column-name status -->
      <column type="gchararray"/>
    </columns>
  </object>
  <object class="GtkWindow" id="jobs_window">
    <property name="type">popup</property>
    <property name="window_position">center-always</property>
    <property name="destroy_with_parent">True</property>
    <property name="type_hint">dropdown-menu</property>
    <property name="skip_taskbar_hint">True</property>
    <property name="skip_pager_hint">True</property>
    <property name="focus_on_map">False</property>
    <property name="deletable">False</property>
    <property name="gravity">south</property>
    <child>
      <object class="GtkTreeView" id="treeview">
        <property name="visible">True</property>
        <property name="model">job_results</property>
        <property name="enable_search">False</property>
        <child>
          <object class="GtkTreeViewColumn" id="job_column">
            <property name="title">job</property>
            <child>
              <object class="GtkCellRendererText" id="job"/>
              <attributes>
                <attribute name="text">0</attribute>
              </attributes>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkTreeViewColumn" id="build_number_column">
            <property name="title">build number</property>
            <child>
              <object class="GtkCellRendererText" id="build_number"/>
              <attributes>
                <attribute name="text">1</attribute>
              </attributes>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkTreeViewColumn" id="status_column">
            <property name="title">status</property>
            <child>
              <object class="GtkCellRendererText" id="status"/>
              <attributes>
                <attribute name="text">2</attribute>
              </attributes>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
